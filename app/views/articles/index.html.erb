<h1>Articles Index page</h1>

<table>
    <thead>
        <th>Title</th>
        <th>Description</th>
        <th>Action</th>
    </thead>
    
    <tbody>
        <% @articleAll.each do |it| %>
            <tr>
                <td><%= it.title%></td>
                <td><%= it.description%></td>
                <td><%= link_to 'Show', article_path(it) %></td>
                <td><%= link_to 'Edit', edit_article_path(it) %></td>
                <td><%= link_to 'Delete', article_path(it), method: :delete %></td>
            </tr>
        <% end %>
    </tbody>
</table>

