<h1>Edit Article</h1>

<% if @article.errors.any? %>
    <h2>The entry can not be updated due to the following errors:</h2>
    <ul>
        <% @article.errors.full_messages.each do |it| %>
            <li><%= it %></li>
        <% end %>
    </ul>
<% end %>



<%= form_with(model:@article, local: true) do |f| %>

    <p>
        <%= f.label :title %><br>
        <%= f.text_field :title %>
    </p>
    
    <p>
        <%= f.label :description %><br>
        <%= f.text_area :description %>
    </p>
    
    <p>
        <%= f.submit %>
    </p>
    
<% end %>
